{
  "manifest_version": 3,
  "name": "AI Live Terminal Bridge - Browser Monitor",
  "version": "1.0.0",
  "description": "Captures console logs & network activity from localhost for AI debugging. Privacy-focused, local-only monitoring.",
  "permissions": [
    "nativeMessaging",
    "tabs",
    "activeTab",
    "management"
  ],
  "host_permissions": [
    "https://*.ngrok.io/*",
    "https://*.ngrok-free.app/*",
    "https://*.loca.lt/*",
    "https://*.trycloudflare.com/*"
  ],
  "optional_host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "AI Live Log Bridge - Status"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "https://github.com/Ami3466/ai-live-log-bridge"
}
